<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greenPrimary"
    tools:context=".Activity.DashboardActivity">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="66dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profileIconImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/img_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileIconImageView"
            app:layout_constraintStart_toEndOf="@+id/logoImageView"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvWelcomeUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/tvAccType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="32dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Body Section: Grid of 3x3 buttons -->


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bottomNavigationLayout"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_below="@id/headerLayout">
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_btn"
            android:layout_marginBottom="5dp"
            >
            <EditText
                android:id="@+id/etVegName"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_custom_bg"
                android:hint="Crop Name"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnCropList"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Crop List"
                android:background="@drawable/custom_btn"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_btn">

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="280dp"
            android:hint="Quantity"
            android:layout_height="48dp"
            android:inputType="number"/>

            <Spinner
                android:id="@+id/spinnerQuantityType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                />

        </LinearLayout>

        <Spinner
            android:id="@+id/etRecipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/custom_btn"
            android:paddingVertical="15dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_btn"
            android:paddingVertical="15dp"
            android:inputType="text"
            android:hint="Address"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn"
            android:paddingVertical="15dp"
            android:layout_marginBottom="5dp"
            android:inputType="textAutoComplete"
            android:hint="Description"/>

        <ImageButton
            android:id="@+id/btnInsertImg"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_insert_img" />
<!--        <Button-->
<!--            android:id="@+id/btnInsertImg"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Insert Image"/>-->

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate Now"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/greenAccent">

        <!-- Home Button -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home" />

        <!-- Profile Button -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />

    </LinearLayout>
</RelativeLayout>
