<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greenPrimary"
    tools:context=".Fragments.AddNGOPartnerFragment">
    <!-- Body Section: Grid of 3x3 buttons -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="100dp"
        >
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_btn"
            android:layout_marginBottom="5dp"
            >
            <EditText
                android:id="@+id/etNGOName"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_custom_bg"
                android:hint="NGO Name"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:typeface="monospace" />


        </LinearLayout>


        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_btn"
            android:paddingVertical="15dp"
            android:inputType="text"
            android:hint="Address"/>

        <EditText
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn"
            android:paddingVertical="15dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:hint="Contact"/>

        <ImageButton
            android:id="@+id/btnInsertImg"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_insert_img" />
        <!--        <Button-->
        <!--            android:id="@+id/btnInsertImg"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Insert Image"/>-->

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed"/>

    </LinearLayout>


</RelativeLayout>
