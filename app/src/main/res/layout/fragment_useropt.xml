<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserOptFragment">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE ACCOUNT TYPE"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bold"
            />

        <Button
            android:id="@+id/btnDonorReg"
            android:layout_width="250dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edittext_custom_bg"
            android:textColor="@color/black"
            android:text="DONOR REGISTRATION"
            android:fontFamily="@font/montserrat"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_margin="3dp"/>


        <Button
            android:id="@+id/btnNGOReg"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NGO REGISTRATION"
            android:background="@drawable/edittext_custom_bg"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_margin="3dp"/>

    </LinearLayout>

</FrameLayout>